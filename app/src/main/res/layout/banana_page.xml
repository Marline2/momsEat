<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/toolbarback"
    layout="@layout/toolbarback" />
  <ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="55dp"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbarback"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      android:layout_gravity="center_vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/scroll">



      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:fontFamily="@font/elice_bold"
        android:text="바나나"
        android:paddingBottom="20dp"
        android:textAlignment="center"/>

      <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/yes"
        ></ImageView>

      <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:scaleType = "fitCenter"
        android:src="@drawable/banana1"
        android:paddingBottom="20dp"/>


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="20dp"
        android:background="@drawable/border_layout"
        android:fontFamily="@font/elice_regular"
        android:layout_gravity="center"
        android:text="칼륨이 풍부한 바나나는 \n 임산부의 피로회복에 도움이 되고 \n 임신중 겪을 수 있는 \n 소화불량 개선에도 도움이 되며, \n\n 신경전달물질인 도파민을 생성하여 \n 구토를 억제시켜주는 효능이 있어서 \n 입덧을 줄여주는데에도 도움이 됩니다."
        android:textAlignment="center"/>
    </LinearLayout>

  </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>